<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableRow
        android:id="@+id/tableRow11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_span="3"

            />

    </TableRow>


    <!-- just draw a  line -->
    <View
        android:layout_height="2dip"
        android:background="#ff2843ff" />

    <!-- edittext span 2 column -->
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip" >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/counterText"
            android:layout_below="@+id/text_view"
            android:layout_marginTop="10dp"
            android:layout_column="1"
            android:width="@dimen/abc_text_size_medium_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SayWord"
            android:id="@+id/btnSayWord"
            android:layout_below="@+id/counterText"
            android:layout_marginTop="10dp"
            android:layout_column="2"
            android:width="@dimen/abc_text_size_medium_material" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RestClient"
            android:id="@+id/btnRestClient"
            android:layout_below="@+id/increment"
            android:layout_marginTop="10dp"
            android:layout_column="3"
            android:width="@dimen/abc_text_size_medium_material" />

    </TableRow>

    <!-- just draw a  line -->
    <View
        android:layout_height="2dip"
        android:background="#ff2843ff" />

    <!-- 3 columns -->
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="..."
            android:id="@+id/txtSpeechInput"
            android:layout_column="1"
            android:layout_span="3"
            />
    </TableRow>

    <!-- just draw a  line -->
    <View
        android:layout_height="2dip"
        android:background="#ff2843ff" />

    <!-- 3 columns -->
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Listen"
            android:id="@+id/btnSpeak"
            android:layout_column="1"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Picker"
            android:id="@+id/pickerBtn"
            android:layout_column="2"
            />

    </TableRow>

    <!-- just draw a  line -->
    <View
        android:layout_height="2dip"
        android:background="#ff2843ff" />


    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SayClipboard"
            android:id="@+id/btnSayClipboard"
            android:layout_below="@+id/increment"
            android:layout_column="1"
            android:width="@dimen/abc_text_size_medium_material" />

    </TableRow>
    <!-- just draw a  line -->
    <View
        android:layout_height="2dip"
        android:background="#ff2843ff" />

    <!-- 1 column1 -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView android:text="@string/hello_world"
            android:id="@+id/text_view"
            android:layout_span="3"
            android:layout_width="7500px"
            android:layout_height="300px"
            android:textColor="#f00"
            android:scrollbars="vertical"
            android:maxLines="10"
            android:layout_marginTop="10dp" />

    </TableRow>


    <!-- 1 column1 -->
    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView android:text="@string/hello_world"
            android:id="@+id/text_view2"
            android:layout_span="3"
            android:layout_width="wrap_content"
            android:layout_height="300px"
            android:textColor="#f00"
            android:scrollbars="vertical"
            android:maxLines="10"
            android:layout_marginTop="10dp" />


    </TableRow>

</TableLayout>


</RelativeLayout>